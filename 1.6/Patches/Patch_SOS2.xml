<?xml version="1.0" encoding="utf-8" ?>
<Patch>       
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Save Our Ship 2</li>
		</mods>
        <match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[@Name="DV_ApparelArmorEnsignBase"]/statBases/Insulation_Cold</xpath>
					<value>
                        <Insulation_Cold>65</Insulation_Cold>
					</value>
				</li>

                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="DV_Apparel_EnsignHelmet"]/statBases/Insulation_Cold</xpath>
                    <value>
                        <Insulation_Cold>40</Insulation_Cold>
                    </value>
                </li>

			</operations>
		</match>
	</Operation>
</Patch>
