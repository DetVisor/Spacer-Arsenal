<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- DV_EnergyWeapon -->

  <WeaponTraitDef MayRequire="Ludeon.RimWorld.Odyssey">
    <defName>DV_EfficientHeatsink</defName>
    <label>quick heatsink</label>
    <description>This weapon has an advanced and efficient heatsink that allows it to cool down faster.</description>
    <commonality>1</commonality>
    <weaponCategory>DV_EnergyWeapon</weaponCategory>
    <statOffsets>
      <MarketValue>50</MarketValue>
    </statOffsets>
    <statFactors>
      <RangedWeapon_Cooldown>0.8</RangedWeapon_Cooldown>
    </statFactors>
    <traitAdjectives>
      <li>quick</li>
      <li>nimble</li>
      <li>hotshot</li>
      <li>cooler</li>
    </traitAdjectives>
  </WeaponTraitDef>

  <WeaponTraitDef MayRequire="Ludeon.RimWorld.Odyssey">
    <defName>DV_CompressedBolts</defName>
    <label>compressed bolts</label>
    <description>This weapon fires more compressed energy bolts that can melt through armor.</description>
    <commonality>1</commonality>
    <weaponCategory>DV_EnergyWeapon</weaponCategory>
    <exclusionTags>
      <li>AmmoType</li>
    </exclusionTags>
    <statOffsets>
      <RangedWeapon_ArmorPenetrationMultiplier>0.2</RangedWeapon_ArmorPenetrationMultiplier>
      <MarketValue>40</MarketValue>
    </statOffsets>
    <traitAdjectives>
      <li>piercing</li>
      <li>compressed</li>
      <li>hardlight</li>
      <li>penetrating</li>
    </traitAdjectives>
  </WeaponTraitDef>

  <WeaponTraitDef MayRequire="Ludeon.RimWorld.Odyssey">
    <defName>DV_EMPBolts</defName>
    <label>EMP bolts</label>
    <description>This weapon charges bolts with electromagnetic energy, which will temporarily disable electronics and mechanoids.</description>
    <commonality>1</commonality>
    <weaponCategory>DV_EnergyWeapon</weaponCategory>
    <exclusionTags>
      <li>AmmoType</li>
      <li>Color</li>
    </exclusionTags>
    <forcedColor>UniqueWeapon_EMP</forcedColor>
    <extraDamages>
      <li>
        <def>EMP</def>
        <amount>4</amount>
      </li>
    </extraDamages>
    <statOffsets>
      <MarketValue>75</MarketValue>
    </statOffsets>
    <traitAdjectives>
      <li>EMP</li>
      <li>electric</li>
      <li>shocking</li>
      <li>sparky</li>
      <li>zapping</li>
    </traitAdjectives>
  </WeaponTraitDef>

  <WeaponTraitDef MayRequire="Ludeon.RimWorld.Odyssey">
    <defName>DV_ExplosiveBolts</defName>
    <label>explosive bolts</label>
    <description>This weapon fires bolts that quickly explode on collision, dealing more damage than normal.</description>
    <commonality>1</commonality>
    <weaponCategory>DV_EnergyWeapon</weaponCategory>
    <exclusionTags>
      <li>AmmoType</li>
    </exclusionTags>
    <statOffsets>
      <RangedWeapon_DamageMultiplier>0.2</RangedWeapon_DamageMultiplier>
      <MarketValue>85</MarketValue>
    </statOffsets>
    <traitAdjectives>
      <li>shredding</li>
      <li>explosive</li>
      <li>boltblast</li>
      <li>heater</li>
      <li>boomer</li>
    </traitAdjectives>
  </WeaponTraitDef>

  <WeaponTraitDef MayRequire="Ludeon.RimWorld.Odyssey">
    <defName>DV_OverchargedBolts</defName>
    <label>overcharged photons</label>
    <description>Special mechanisms allow this weapon to overcharge photon bolts to make them more powerful. The recoil makes it less accurate.</description>
    <commonality>1</commonality>
    <weaponCategory>DV_EnergyWeapon</weaponCategory>
    <exclusionTags>
      <li>AmmoType</li>
    </exclusionTags>
    <statOffsets>
      <RangedWeapon_DamageMultiplier>0.3</RangedWeapon_DamageMultiplier>
      <RangedWeapon_ArmorPenetrationMultiplier>0.15</RangedWeapon_ArmorPenetrationMultiplier>
      <MarketValue>60</MarketValue>
    </statOffsets>
    <statFactors>
      <AccuracyTouch>0.9</AccuracyTouch>
      <AccuracyShort>0.9</AccuracyShort>
      <AccuracyMedium>0.9</AccuracyMedium>
      <AccuracyLong>0.9</AccuracyLong>
    </statFactors>
    <traitAdjectives>
      <li>overcharger</li>
      <li>hi-power</li>
      <li>heavy-bolt</li>
      <li>hardhitter</li>
      <li>heavy-hit</li>
    </traitAdjectives>
  </WeaponTraitDef>

  <WeaponTraitDef MayRequire="Ludeon.RimWorld.Odyssey">
    <defName>DV_FrequencyAmplifier</defName>
    <label>frequency amplifier</label>
    <description>This weapon passes photon bolts through a crystal amplifier, dramatically increasing the weapon's damage and range. The weapon needs to cool down between uses.</description>
    <commonality>1</commonality>
    <weaponCategory>DV_EnergyWeapon</weaponCategory>
    <statOffsets>
      <RangedWeapon_RangeMultiplier>0.3</RangedWeapon_RangeMultiplier>
      <RangedWeapon_DamageMultiplier>0.5</RangedWeapon_DamageMultiplier>
      <MarketValue>120</MarketValue>
    </statOffsets>
    <statFactors>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
    </statFactors>
    <traitAdjectives>
      <li>amplified</li>
    </traitAdjectives>
  </WeaponTraitDef>

  <WeaponTraitDef MayRequire="Ludeon.RimWorld.Odyssey">
    <defName>DV_ExtendedCell</defName>
    <label>extended cell</label>
    <description>This weapon fires 50% more shots in a single burst than normal.</description>
    <commonality>1</commonality>
    <weaponCategory>DV_EnergyWeapon</weaponCategory>
    <burstShotCountMultiplier>1.5</burstShotCountMultiplier>
    <statOffsets>
      <MarketValue>60</MarketValue>
    </statOffsets>
    <traitAdjectives>
      <li>high-capacity</li>
      <li>extendo-cell</li>
    </traitAdjectives>
  </WeaponTraitDef>

  <WeaponTraitDef MayRequire="Ludeon.RimWorld.Odyssey">
    <defName>DV_EMPPulser</defName>
    <label>EMP pulser</label>
    <description>This weapon can emit a burst of energy centered on the user. The burst will stun nearby electronic targets like mechanoids or turrets. Once used, the pulser takes some time to recharge.</description>
    <commonality>0.5</commonality>
    <weaponCategory>DV_EnergyWeapon</weaponCategory>
    <traitAdjectives>
      <li>pulse</li>
      <li>EMP</li>
    </traitAdjectives>
    <statOffsets>
      <MarketValue>80</MarketValue>
    </statOffsets>
    <exclusionTags>
      <li>Ability</li>
    </exclusionTags>
    <abilityProps>
      <abilityDef>EMPPulse</abilityDef>
    </abilityProps>
  </WeaponTraitDef>

</Defs>